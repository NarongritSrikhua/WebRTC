<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script id="initial-data" type="application/json">
    <%- JSON.stringify({ captures, messages }) %>
  </script>
  <script>
    const ROOM_ID = "<%= roomId %>";
    const INITIAL_ROOM_DATA = JSON.parse(
      document.getElementById('initial-data').textContent
    );
  </script>  
  <script defer src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"></script>
  <script src="/socket.io/socket.io.js" defer></script>
  <script src="script.js" defer></script>
  <title>Document</title>
  <style>
    #video-grid {
      position: relative;
      display: grid;
      grid-template-columns: repeat(auto-fill, 300px);
      grid-auto-rows: 300px;
      margin-right: 320px;  /* Space for chat */
    }
    
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .controls {
      position: relative;  /* Changed from fixed to relative */
      display: flex;
      gap: 10px;
      justify-content: center;
      padding: 15px;
      background: rgba(255, 255, 255, 0.9);
      margin-top: 20px;    /* Space between video grid and controls */
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    button {
      padding: 10px 20px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background: #007bff;
      color: white;
      font-weight: bold;
      transition: background 0.2s;
    }

    button:hover {
      background: #0056b3;
    }

    #captures-section {
      margin-top: 20px;
      padding: 20px;
      border-top: 1px solid #ccc;
      margin-right: 320px;
    }

    #captures-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 300px);
      gap: 20px;
      margin-top: 20px;
    }

    .capture-container {
      position: relative;
      width: 100%;
    }

    .capture-container img {
      width: 100%;
      height: auto;
      max-width: 300px;
    }

    .capture-label {
      position: absolute;
      top: -25px;
      left: 0;
      font-size: 14px;
      color: #666;
      white-space: nowrap;
    }

    .chat-container {
      position: fixed;
      right: 20px;
      bottom: 20px;
      width: 300px;
      height: 400px;
      background: white;
      border: 1px solid #ccc;
      border-radius: 5px;
      display: flex;
      flex-direction: column;
    }

    .chat-messages {
      flex-grow: 1;
      overflow-y: auto;
      padding: 15px;
      display: flex;
      flex-direction: column;
    }

    .chat-input-container {
      padding: 10px;
      border-top: 1px solid #ccc;
      display: flex;
      gap: 10px;
    }

    .chat-input {
      flex-grow: 1;
      padding: 5px;
    }

    .message {
      margin-bottom: 10px;
      padding: 8px 12px;
      border-radius: 8px;
      max-width: 80%;
      position: relative;
    }

    .message.sent {
      background: #007bff;
      color: white;
      margin-left: auto;
    }

    .message.received {
      background: #e9ecef;
      color: #333;
    }

    .message-time {
      font-size: 0.75em;
      opacity: 0.8;
      display: block;
      margin-top: 4px;
    }
  </style>
</head>
<body>
  <div id="video-grid"></div>
  <div class="controls">
    <button id="captureLocal">Capture 1</button>
    <button id="captureRemote">Capture 2</button>
  </div>
  <div id="captures-section">
    <div id="captures-grid"></div>
  </div>
  <div class="chat-container">
    <div class="chat-messages" id="chat-messages"></div>
    <div class="chat-input-container">
      <input type="text" class="chat-input" id="chat-input">
      <button id="send-message"></button>
    </div>
  </div>
</body>
</html>
