<script>
  const roomUrl = window.location.href;
  // ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå
  document.getElementById('copyLinkBtn').addEventListener('click', () => {
    navigator.clipboard.writeText(roomUrl).then(() => {
      alert('‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß!');
    }).catch(() => {
      alert('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå');
    });
  });

  // ‡πÅ‡∏™‡∏î‡∏á QR Code ‡πÉ‡∏ô Modal
  const modal = document.getElementById("qrModal");
  const openBtn = document.getElementById("showQRBtn");
  const toggleBtn = document.getElementById("showQRBtn");
  const qrContainer = document.getElementById("qrcode");

  toggleBtn.onclick = () => {
    const isVisible = modal.style.display === "block";
    
    if (isVisible) {
      modal.style.display = "none";
      qrContainer.innerHTML = ""; // ‡∏•‡πâ‡∏≤‡∏á QR
    } else {
      qrContainer.innerHTML = "";
      QRCode.toCanvas(roomUrl, { width: 200 }, (err, canvas) => {
        if (!err) qrContainer.appendChild(canvas);
      });
      modal.style.display = "block";
    }
  };

  window.onclick = (event) => {
    if (event.target === modal) modal.style.display = "none";
  };
</script>

